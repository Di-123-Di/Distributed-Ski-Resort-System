<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0">

  <display-name>Ski Resort Servlet Web Application</display-name>

  <listener>
    <listener-class>ski.servlet.config.ApplicationConfig</listener-class>
  </listener>
  <listener>
    <listener-class>ski.servlet.config.ResourceConfig</listener-class>
  </listener>

  <!-- HealthCheck Servlet -->
  <servlet>
    <servlet-name>HealthCheckServlet</servlet-name>
    <servlet-class>ski.servlet.HealthCheckServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HealthCheckServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>HealthCheckServlet</servlet-name>
    <url-pattern>/health</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>HealthCheckServlet</servlet-name>
    <url-pattern>/health/</url-pattern>
  </servlet-mapping>

  <!-- Skier Servlet -->
  <servlet>
    <servlet-name>SkierServlet</servlet-name>
    <servlet-class>ski.servlet.SkierServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SkierServlet</servlet-name>
    <url-pattern>/skiers/*</url-pattern>
  </servlet-mapping>

  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
</web-app>